{
  "name": "flowfixer",
  "displayName": "Visual Debugger",
  "description": "Visual Debugger â€” explains errors before the fix, reviews AI changes after",
  "version": "0.1.0",
  "publisher": "flowfixer-team",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onView:flowfixer.errorPanel",
    "onView:flowfixer.diffPanel",
    "onView:flowfixer.dashboardPanel",
    "onCommand:flowfixer.showErrorPanel",
    "onCommand:flowfixer.showDiffPanel",
    "onCommand:flowfixer.showDashboard",
    "onCommand:flowfixer.setGeminiKey",
    "onCommand:flowfixer.setMongoUri",
    "onCommand:flowfixer.analyzeCurrentFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flowfixer.showErrorPanel",
        "title": "Visual Debugger: Show Error Explanation"
      },
      {
        "command": "flowfixer.showDiffPanel",
        "title": "Visual Debugger: Show Diff Review"
      },
      {
        "command": "flowfixer.showDashboard",
        "title": "Visual Debugger: Show Bug Dashboard"
      },
      {
        "command": "flowfixer.setGeminiKey",
        "title": "Visual Debugger: Set Gemini API Key"
      },
      {
        "command": "flowfixer.setMongoUri",
        "title": "Visual Debugger: Set MongoDB Atlas URI"
      },
      {
        "command": "flowfixer.analyzeCurrentFile",
        "title": "Visual Debugger: Analyze Current File"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowfixer",
          "title": "Visual Debugger",
          "icon": "$(bug)"
        }
      ]
    },
    "views": {
      "flowfixer": [
        {
          "type": "webview",
          "id": "flowfixer.errorPanel",
          "name": "Error Explanation"
        },
        {
          "type": "webview",
          "id": "flowfixer.diffPanel",
          "name": "Diff Review"
        },
        {
          "type": "webview",
          "id": "flowfixer.dashboardPanel",
          "name": "Bug Dashboard"
        }
      ]
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "vsce package --no-dependencies",
    "lint": "tsc --noEmit && tsc --noEmit -p tsconfig.webview.json",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/diff": "^5.2.0",
    "@types/node": "^20.0.0",
    "@types/prismjs": "^1.26.6",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.3",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "diff": "^5.2.0",
    "mongodb": "^6.3.0",
    "prismjs": "^1.30.0"
  }
}
